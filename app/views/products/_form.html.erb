<%= simple_form_for(@product) do |f| %>  
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :Description %>
    <%= f.input :Price %>
    <%= f.input :Category, collection: ["footwear", "accessories", "menswear", "womenswear"] %>
    <%= f.file_field :Picture %>

  </div>
  
  <p>
  <%= link_to 'Back', products_path %>
  </p>
<%end%>