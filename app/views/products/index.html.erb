<!DOCTYPE html>
<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Category</th>
      <th>Seller</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |f| %>
      <tr>
        <td><%= f.name %></td>
        <td><%= f.Description %></td>
        <td><%= f.Price %></td>
        <td><%= f.Category %></td>
        <td><%= f.seller_id %></td>
        <td><%= link_to 'Show', product_path(f), method: :get %></td>
        <td><%= link_to 'Edit', edit_product_path(f), method: :get %></td>
        <td><%= link_to "Delete product", @product, method: :delete, data: { confirm: 'Are you sure you want to delete this product?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, method: :get %>
</html>